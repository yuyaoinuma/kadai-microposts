<ul class="media-left">
  <% microposts.each do |micropost|%>
  <li class="media">
    <div class="media-body">
      <div>
        <%= link_to micropost.user.name, user_path(micropost.user)%><span  class="text-muted" > posted at <%= micropost.created_at %></span>
      </div>
      <div>
        <p><%= micropost.content %></p>
      </div>
      <div>
        <table>
          <tr>
            <td id="favorite__button--<%= micropost.id %>"><%= render 'favorites/favorite_button', micropost: micropost %></td>
            <% if current_user == micropost.user %>
            <td><%= link_to '削除', micropost, method: :delete, data: {confirm: 'You sure?'}, class: 'btn btn-danger btn-xs' %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </li>
  <% end %>
  <%= paginate microposts %>
</ul>